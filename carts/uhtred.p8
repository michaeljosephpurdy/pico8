__lua__

gs = "menu" -- menu, game, pause
menu_choice = 0
t = 0
actors = {}
player=nil

function _init()
 player = new_actor()
end

function _update()
 for a in all(actors) do
  a.dy = 0
  a.dx = 0
 end
 handle_input()
 for a in all(actors) do
  update_actor(a)
 end
end

function _draw()
 cls()
 if gs == "menu" then
  menu_draw()
 else
  game_draw()
 end
end

function menu_draw()
 print("press x - menu_choice" .. menu_choice)
end

function game_draw()
 for a in all(actors) do
  draw_actor(a)
 end
end

function new_actor()
 a={x=0, y=0, dx=0, dy=0, spr=0, spd=1, s="idle", c=false}
 add(actors, a)
 return a
end

function update_actor(a)
 a.x += (a.dx * a.spd)
 a.y += (a.dy * a.spd)
end

function draw_actor(a)
 spr(a.spr, a.x, a.y)
end

