pico-8 cartridge // http://www.pico-8.com
version 16
__lua__

gs = "game" -- menu, game, pause
t = 0
actors = {}
player=nil

function _init()
 player = new_actor()
end

function _update()
 for a in all(actors) do
  update_actor(a)
 end
end

function _draw()
 if gs == "menu" then
  menu_draw()
 else
  game_draw()
 end
end

function menu_draw()

end

function game_draw()
 for a in all(actors) do
  draw_actor(a)
 end
end

function new_actor()
 a={x=0, y=0, dx=0, dy=0, spr=0, spd=1, s="idle", c=false}
 add(actors, a)
 return a
end

function update_actor(a)
 a.x += (a.dx * a.spd)
 a.y += (a.dy * a.spd)
end

function draw_actor(a)
 spr(a.spr, a.x, a.y)
end



