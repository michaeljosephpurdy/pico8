pico-8 cartridge // http://www.pico-8.com
version 16
__lua__

gs = "menu" -- menu, game, pause
t = 0
all_actors = {}
player=nil

function _init()
 player = new_actor()
end

function _update()
 update_actor(player)
end

function _draw()
 draw_actor(player)
end

function new_actor()
end

function new_actor()
 a={x=0, y=0, dx=0, dy=0, spr=0, spd=1, s="idle", c=false}
 add(all_actors, a)
 return a
end

function update_actor(a)
 a.x += (a.dx * a.spd)
 a.y += (a.dy * a.spd)
end

function draw_actor(a)
 spr(a.spr, a.x, a.y)
end



